{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"useSemanticElements": "off",
				"noNoninteractiveElementToInteractiveRole": "off",
				"useFocusableInteractive": "off"
			},
			"style": {
				"useExponentiationOperator": "off"
			},
			"correctness": {
				"noSwitchDeclarations": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}